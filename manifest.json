{
  "manifest_version": 3,
  "name": "SimplYT",
  "version": "0.1.1",
  "description": "Designed to simplify and personalize your youtube feed. Specially desgined for those concerned with using it conciously.",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "activeTab",
    "alarms"],
  "action": {
    "default_popup": "hello.html"
  },
  "host_permissions": [
        "https://www.youtube.com/*"
    ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
